{
  _delay_ms(1);

  lcd_wr_command(0x28);     //LCD 4-bit mode and 2 lines.
  lcd_wr_command(0x01);
  lcd_wr_command(0x06);
  lcd_wr_command(0x0E);
  lcd_wr_command(0x80);
  
}


/*****Function to Write Command on LCD*****/
void lcd_wr_command(unsigned char cmd)
{
  unsigned char temp;
  temp = cmd;
  temp = temp & 0xF0;
  lcd_port &= 0x0F;
  lcd_port |= temp;
  cbit(lcd_port,RS);
  cbit(lcd_port,RW);
  sbit(lcd_port,EN);
  _delay_ms(5);
  cbit(lcd_port,EN);
  
  cmd = cmd & 0x0F;
  cmd = cmd<<4;
  lcd_port &= 0x0F;
  lcd_port |= cmd;
  cbit(lcd_port,RS);
  cbit(lcd_port,RW);
  sbit(lcd_port,EN);
  _delay_ms(5);
  cbit(lcd_port,EN);
}

/*****Function to Write Data on LCD*****/
void lcd_wr_char(char letter)
{
  char temp;
  temp = letter;
  temp = (temp & 0xF0);
  lcd_port &= 0x0F;
  lcd_port |= temp;
  sbit(lcd_port,RS);
  cbit(lcd_port,RW);
  sbit(lcd_port,EN);
  _delay_ms(5);
  cbit(lcd_port,EN);

  letter = letter & 0x0F;
  letter = letter<<4;
  lcd_port &= 0x0F;
  lcd_port |= letter;
  sbit(lcd_port,RS);
  cbit(lcd_port,RW);
  sbit(lcd_port,EN);
  _delay_ms(5);
  cbit(lcd_port,EN);
}


void lcd_home()
{
